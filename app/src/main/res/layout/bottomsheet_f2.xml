<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingBottom="24dp"
    android:orientation="vertical">
    <TableRow
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/coustom_box"
        android:backgroundTint="@color/text_color2"
        android:layout_marginBottom="24dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_history_bottomsheet_f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Question"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_baseline_history_24"
            android:textColor="@color/text_color"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            android:padding="5dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_historyPost_bottomsheet_f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Posts"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_baseline_history_24"
            android:textColor="@color/text_color"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            android:padding="5dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>