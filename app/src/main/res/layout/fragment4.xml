<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_menu_24"
            android:id="@+id/ib_menu_f4"
            android:layout_margin="10dp"
            android:layout_gravity="left|center_vertical"/>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/logo"
            android:id="@+id/logo_menu_f4"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal|center_vertical"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_edit_24"
            android:id="@+id/ib_editprofile_f4"
            android:layout_margin="10dp"
            android:layout_gravity="right|center_vertical"/>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressbar_f4"
        android:indeterminate="true"
        android:indeterminateTint="@color/purple_500"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="50dp"
            android:clickable="true"
            android:id="@+id/cv_dp_f4"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/dp_f4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_f4"
                android:layout_marginBottom="2dp"
                android:hint="name"
                android:textSize="25sp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:gravity="start"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_batch_f4"
                android:layout_marginBottom="2dp"
                android:hint="Branch | Batch"
                android:textSize="15sp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:gravity="start"/>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="PRIMARY DETAILS"
        android:paddingVertical="5dp"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:gravity="start"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_marginHorizontal="16dp"
       android:layout_height="380dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:layout_marginTop="16dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="2dp"
               android:text="Professional Bio : "
               android:paddingVertical="5dp"
               android:paddingStart="40dp"
               android:textSize="15sp"
               android:textAlignment="viewStart"
               android:textColor="@android:color/darker_gray"
               android:gravity="start"/>
           <TextView
               android:id="@+id/tv_bio_f4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="2dp"
               android:text="Bio "
               android:paddingVertical="5dp"
               android:paddingStart="40dp"
               android:paddingEnd="20dp"
               android:textSize="15sp"
               android:textAlignment="viewStart"
               android:textColor="@color/text_color"
               android:gravity="start"/>

           <TableRow android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/gray"
               android:layout_marginStart="40dp"
               android:layout_marginEnd="20dp"/>

           <TextView
               android:layout_marginTop="16dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="2dp"
               android:text="Email : "
               android:paddingVertical="5dp"
               android:paddingStart="40dp"
               android:textSize="15sp"
               android:textAlignment="viewStart"
               android:textColor="@android:color/darker_gray"
               android:gravity="start"/>
           <TextView
               android:id="@+id/tv_email_f4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="2dp"
               android:text="mail@mail.com "
               android:paddingVertical="5dp"
               android:paddingStart="40dp"
               android:paddingEnd="20dp"
               android:textSize="15sp"
               android:textAlignment="viewStart"
               android:textColor="@color/text_color"
               android:gravity="start"/>

           <TableRow android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/gray"
               android:layout_marginStart="40dp"
               android:layout_marginEnd="20dp"/>

           <TextView
               android:layout_marginTop="16dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="2dp"
               android:text="Phone Number : "
               android:paddingVertical="5dp"
               android:paddingStart="40dp"
               android:textSize="15sp"
               android:textAlignment="viewStart"
               android:textColor="@android:color/darker_gray"
               android:gravity="start"/>
           <TextView
               android:id="@+id/tv_phone_f4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="2dp"
               android:text="111111111 "
               android:paddingVertical="5dp"
               android:paddingStart="40dp"
               android:paddingEnd="20dp"
               android:textSize="15sp"
               android:textAlignment="viewStart"
               android:textColor="@color/text_color"
               android:gravity="start"/>

           <TableRow android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/gray"
               android:layout_marginStart="40dp"
               android:layout_marginEnd="20dp"/>

       </LinearLayout>
   </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_facebook_24"
            android:tint="@color/text_color2"
            android:id="@+id/ib_fb_f4"
            android:layout_margin="10dp"
            android:layout_gravity="left|center_vertical"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/instagram"
            android:id="@+id/ib_insta_f4"
            android:layout_margin="10dp"
            android:layout_gravity="left|center_vertical"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/twitter"
            android:id="@+id/ib_twitter_f4"
            android:layout_margin="10dp"
            android:layout_gravity="left|center_vertical"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/linkedin"
            android:id="@+id/ib_linkedin_f4"
            android:layout_margin="10dp"
            android:layout_gravity="left|center_vertical"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_public_24"
            android:id="@+id/ib_web_f4"
            android:layout_margin="10dp"
            android:layout_gravity="left|center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_followers_f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="followers"
            android:padding="5dp"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_baseline_followers_24"
            android:drawablePadding="5dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:textColor="@color/text_color2"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/tv_post_f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="posts"
            android:padding="5dp"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_baseline_posts_setup_24"
            android:drawablePadding="5dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:textColor="@color/text_color2"/>


    </LinearLayout>






</LinearLayout>