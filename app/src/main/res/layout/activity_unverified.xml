<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".UnVerifiedActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_verified_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="8dp"
        android:text="It looks like your Email Account needs to be verified!"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginVertical="8dp"
        android:text="If you haven't recieved the verification mail. Please look your spam folder once or you may click on the button below to resend the verification code."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progressbar_UnVerified"
                android:indeterminate="true"
                android:visibility="gone"
                android:indeterminateTint="@color/purple_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button_UnVerified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color"
                android:text="Sign out"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progressbar2_UnVerified"
                android:indeterminate="true"
                android:visibility="gone"
                android:indeterminateTint="@color/purple_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button2_UnVerified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color"
                android:text="Resend"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </FrameLayout>
    </LinearLayout>





</LinearLayout>