<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:paddingHorizontal="10dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/iv_yourques_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_person_24" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_yourques_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:hint="name"
                    android:textColor="@color/text_color2"/>
                <TextView
                    android:id="@+id/tv_time_yourques_item"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="time"
                    android:textColor="@color/gray"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="In : "/>
                <TextView
                    android:id="@+id/tv_category_yourques_item"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="category"
                    android:textColor="@color/text_color2"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_title_yourques_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question Title"
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_disc_yourques_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum Text is entered here"/>


            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:paddingHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:background="@color/light_bg_main"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reply_yourques_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Answer"
                    android:drawablePadding="10dp"
                    android:background="@drawable/coustom_box"
                    android:backgroundTint="@color/text_color2"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/tv_delete_yourques_item"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Delete"
                    android:drawablePadding="10dp"
                    android:background="@drawable/coustom_box"
                    android:backgroundTint="@color/text_color"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginRight="10dp" />

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>