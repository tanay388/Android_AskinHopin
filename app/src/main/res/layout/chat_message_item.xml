<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_parent_chat_item"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_reciever_item"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/reciever_background_chat"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_chat_reciever_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat message items.."
            android:textColor="@color/white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_time_chat_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:paddingHorizontal="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/bg_main"
            android:textSize="8sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sender_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/sender_background"
        android:layout_gravity="center_vertical|right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_chat_sender_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat message items..."
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_time_chat_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:paddingHorizontal="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/gray"
            android:textSize="8sp"/>
    </LinearLayout>



</LinearLayout>