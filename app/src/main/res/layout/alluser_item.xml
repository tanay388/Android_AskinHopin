<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/ll_parent_allUsers_item"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/text_color2"
        app:cardCornerRadius="50dp">

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_allUsers_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_person_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_allUsers_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="name"
        android:textColor="@color/text_color2"/>

    <TextView
        android:id="@+id/tv_batch_allUsers_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:textSize="14sp" />

    <TextView
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:id="@+id/tv_bio_allUsers_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="4"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_batch_alluser_item">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/b_sendmessage_alluser_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Message"
        android:textSize="11sp"
        android:drawableLeft="@drawable/ic_baseline_chat_24"
        android:drawableTint="@color/white"
        android:backgroundTint="@color/text_color2"
        android:textAllCaps="false" />




</LinearLayout>