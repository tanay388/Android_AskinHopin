<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="2dp"
    android:id="@+id/rl_notification_parent"
    android:gravity="center_vertical"
    android:paddingRight="10dp"
    android:paddingVertical="12dp"
    android:clickable="true"
    android:background="@drawable/coustom_box">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sender_dp_notification"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_sender_dp_notification"
            android:background="@drawable/ic_baseline_person_24"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cv_sender_dp_notification"
        android:orientation="vertical"
        android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/tv_content_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/text_color"/>
        <TextView
            android:id="@+id/tv_time_notification"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="11dp"
            android:textColor="@color/gray"/>

    </LinearLayout>

</RelativeLayout>