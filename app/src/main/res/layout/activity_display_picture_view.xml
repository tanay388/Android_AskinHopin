<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".DisplayPictureView">



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="170dp"
        android:layout_width="340dp"
        android:layout_height="340dp">

        <ImageView
            android:id="@+id/iv_dpv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_person_24"/>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressbar_dpv"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateTint="@color/purple_500"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>


        <Button
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Save Image"
            android:visibility="gone"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:id="@+id/b_save_dpv"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_alignParentLeft="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Change Image"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:id="@+id/b_edit_dpv"/>

        <Button
            android:layout_alignParentRight="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Remove Dp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:id="@+id/b_remove_dpv"/>

    </RelativeLayout>



</LinearLayout>