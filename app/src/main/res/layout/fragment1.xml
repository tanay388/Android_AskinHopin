<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_bottomsheet"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:cardBackgroundColor="@color/white">

        <ImageButton
            android:id="@+id/ib_menu_f1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:id="@+id/logo_menu_f1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:background="@color/transparent"
            android:src="@drawable/logo" />



        <ImageView
            android:clickable="true"
            android:id="@+id/iv_message_f1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/ic_message_svgrepo_com"/>




    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressbar_f1"
        android:layout_marginTop="-6dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:padding="0dp"
        android:indeterminateTint="@color/purple_500"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_profiledetail_f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginTop="-6dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="10dp"
                android:paddingHorizontal="10dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/iv_dp_thumbnail_f1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_person_24" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:maxLines="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Hey,"/>

                    <TextView
                        android:id="@+id/tv_name_currentuser_f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:maxLines="1"

                        android:textSize="24sp"
                        android:textColor="@color/text_color"/>

                </LinearLayout>

                <Button
                    android:id="@+id/b_Addpost_f1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Share Your Project"
                    android:backgroundTint="@color/text_color2"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>

            </LinearLayout>


        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_f1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="80dp"
            android:clipToPadding="false"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp" />
    </FrameLayout>





</LinearLayout>