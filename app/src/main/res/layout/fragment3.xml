<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_f3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/white"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/ib_menu_f3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:id="@+id/logo_menu_f3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:background="@color/transparent"
            android:src="@drawable/logo" />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:paddingHorizontal="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_dp_thumbnail_f3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressbar_f3"
        android:layout_marginTop="-11dp"
        android:layout_marginHorizontal="10dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:padding="0dp"
        android:indeterminateTint="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/rv_f3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_f3"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_f3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="2dp"
        tools:layout_editor_absoluteX="234dp" />
</androidx.constraintlayout.widget.ConstraintLayout>