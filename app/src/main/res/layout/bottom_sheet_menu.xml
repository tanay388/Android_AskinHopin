<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingHorizontal="15dp"
    android:paddingBottom="24dp"
    android:layout_height="wrap_content">
    <TableRow
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/coustom_box"
        android:backgroundTint="@color/text_color2"
        android:layout_marginBottom="24dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sendmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_baseline_message_24"
            android:textColor="@color/text_color"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            android:padding="5dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_allUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Users"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableTint="@color/text_color"
            android:textColor="@color/text_color"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            android:padding="5dp"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_baseline_contactless_24"
            android:textColor="@color/text_color"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            android:padding="5dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
            android:textColor="@color/text_color"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            android:padding="5dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>